<h2>Definitions for <%= @word.get_word()%></h2>

<ul class="definition_list">
  <% @all_definitions.each() do |definition| %>
  <li><%= definition%></li>
  <% end %>
</ul>


<h3>Add Definition:</h3>

<form action="/success2" method="post">
  <input id="word" name="word" type="hidden" value="<%= @word.get_word()%>">
  <label for="definition">What definition would you like to add?</label>
    <input id="definition" name="definition" type="text">

  <button type="submit">Add That Definition!</button>
</form>

<a href='/'>Home</a>
