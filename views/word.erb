<h2>Definitions for <%=@word.get_word()%>:</h2>
<ul><%@all_definitions.each() do |definition| %>
<li><%= definition%></li>
<%end %>
</ul>

<form action="/success_2" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id().to_s() %>'>

  <label for='definition'>Definition</label>
  <input id='definition' name='definition' type='text'>

  <button type="submit">Add That Definition!</button>
</form>


<a href="/">Home</a>
